{
	"compilerOptions": {
		"lib": ["ES2020", "DOM"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./lib/",
		"declarationDir": "./lib/types",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true
	},
	"files": ["./src/index.ts"]
}
